{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true, // 存在隐式 any 时报错
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["react", "jest", "node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build/**",
    "dist/**",
    "coverage/**",
    "marked/**",
    "server/**"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}
